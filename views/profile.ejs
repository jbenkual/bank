<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/css/foundation.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/css/normalize.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body     { padding-top:80px; word-wrap:break-word; }
  </style>
</head>
<body>
<div class="container">

  <div class="page-header text-center">
    <h1><span class="fa fa-anchor"></span> Salutations</h1>
    <a href="/logout" class="button">Logout</a>
  </div>

  <div class="row">
    <!-- LOCAL INFORMATION -->
    <div class="small-6 columns">
      <div class="well">
        <h3><span class="fa fa-user"></span> <%= user.local.name %></h3>
          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
          </p>

      </div>
    </div>

    <div class="small-6 columns">
        <h3><span class="fa fa-dollar"></span> <%= user.local.name %></h3>
          <p>
            <strong>Balance:</strong>: $ -500.00<br>
            <table>
              <tr><td><strong>Transaction Log</strong></td></tr>
              <tr>
                <td><strong>Date</strong></td>
                <td><strong>Amount</strong></td>
                <td><strong>Description</strong></td>
              </tr>
              <% var transaction = {date: "today", amount: "-500.00", description: "4/20"} %>
              <tr>
                <td><%= transaction.date %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.description %></td>
              </tr>
            </table>
          </p>
          
          <a onclick="tNegative(true)" data-reveal-id="myModal" class="button">Make a Withdrawal</a>
          <a onclick="tNegative(false)" data-reveal-id="myModal" class="button">Make a Deposit</a>

      </div>

  </div>

  <div id="myModal" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    <h4 class="modal-title">Please Confirm this Transaction 
      <% var d = new Date();

      var month = d.getMonth()+1;
      var day = d.getDate();

      var output =  (month<10 ? '0' : '') + month + '/' +
        (day<10 ? '0' : '') + day + '/' + d.getFullYear()%>

       <%=output%>
    </h4>
    <div>
      <label>Amount </label> 
      <input id="amount" placeholder="0.00" style="text-align: right"> </input>
    </div>
    <div>
      <label>Description </label> 
      <input id="desc" placeholder="" style="text-align: right"> </input>
    </div>
    <hr>
    <div class="row">
        <div class="small-8 columns small-centered">
            <button type="button" class="button" data-dismiss="modal">Cancel</button>
            <button type="button" class="button" id="confirm">Make Deposit</button>
        </div>
    </div>

  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/js/foundation.min.js"></script>

  <script type="text/javascript">
  $(document).foundation();
    var negative = false;
    var tNegative = function(bool) { negative = bool}
    var transaction = function() {
      var data = { 
        amount: $("#amount").val(), 
        description: $("#desc").val(),
        name: tNegative ? "Withdrawal" : "Deposit",
      }
       // if(negative) { data.amount = "-" + data.amount}
        console.log(data);
      $.post("/user/transaction", data, function(err, success){
        if (err) {
          console.log("Error. ", error);
        } else {
          console.log("success");
        }
      })
    }

    $("#confirm").on('click', transaction);
  </script>
</body>
</html>
