<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Salutations</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.local.name %></h3>
                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-dollar"></span> <%= user.local.name %></h3>
                    <p>
                        <strong>Balance:</strong>: $ -500.00<br>
                        <table>
                            <tr><td><strong>Transaction Log</strong></td></tr>
                            <tr>
                                <td><strong>Date</strong></td>
                                <td><strong>Amount</strong></td>
                                <td><strong>Description</strong></td>
                            </tr>
                            <% var transaction = {date: "today", amount: "-500.00", description: "4/20"} %>
                            <tr>
                                <td><%= transaction.date %></td>
                                <td><%= transaction.amount %></td>
                                <td><%= transaction.description %></td>
                            </tr>
                        </table>
                    </p>
                    
                    <a onclick="tNegative(true)" data-toggle="modal" data-target="#myModal" class="btn btn-default">Make a Withdrawal</a>
                    <a onclick="tNegative(false)" data-toggle="modal" data-target="#myModal" class="btn btn-default">Make a Deposit</a>

            </div>
        </div>

    </div>


    <div id="myModal" class="modal fade modal-sm">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Please Confirm this Transaction 
                <% var d = new Date();

                var month = d.getMonth()+1;
                var day = d.getDate();

                var output =  (month<10 ? '0' : '') + month + '/' +
                    (day<10 ? '0' : '') + day + '/' + d.getFullYear()%>
                
                 <%=output%>
            </h4>
          </div>
          <div class="modal-body">
            <div>
                <label>Amount </label> 
                <input id="amount" placeholder="0.00" style="text-align: right"> </input>
            </div>
            <div>
                <label>Description </label> 
                <input id="desc" placeholder="" style="text-align: right"> </input>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="confirm">Make Deposit</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        var negative = false;
        var tNegative = function(bool) { negative = bool}
        var transaction = function() {
            var data = { 
                amount: $("#amount").val(), 
                description: $("#desc").val(),
                name: tNegative ? "Withdrawal" : "Deposit",
            }
           // if(negative) { data.amount = "-" + data.amount}
                console.log(data);
            $.post("/user/transaction", data, function(err, success){
                if (err) {
                    console.log("Error. ", error);
                } else {
                    console.log("success");
                }
            })
        }

        $("#confirm").on('click', transaction);
    </script>
</body>
</html>
